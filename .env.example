# HDFS Configuration
HDFS_HOST=namenode
HDFS_PORT=9000
HDFS_USER=hadoop
HDFS_AUTH_TYPE=simple
HDFS_NAMENODE_WEB_PORT=9870

# LLM Configuration
LLM_PROVIDER=anthropic
LLM_API_KEY=<get your own key>
LLM_MODEL_NAME=claude-3-sonnet-20240229
LLM_MAX_TOKENS=3000
LLM_TEMPERATURE=0.3

# Cost Configuration (USD per GB per month)
STANDARD_STORAGE_COST_PER_GB=0.04
COLD_STORAGE_COST_PER_GB=0.01
ARCHIVE_STORAGE_COST_PER_GB=0.005
METADATA_COST_PER_FILE=0.0001
NETWORK_COST_PER_GB=0.01

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=INFO

# Redis Configuration
REDIS_ENABLED=true
REDIS_URL=redis://redis:6379

# Security Configuration
ENABLE_AUTH=false
AUTH_SECRET_KEY=your-secret-key-here

# Environment
ENVIRONMENT=development